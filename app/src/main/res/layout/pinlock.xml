<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="text"
        android:textColorHint="@android:color/holo_blue_dark"
        app:met_autoValidate="false"
        app:met_bottomTextSize="8dp"
        app:met_clearButton="true"
        app:met_errorColor="@android:color/holo_red_dark"
        app:met_floatingLabel="normal"
        app:met_floatingLabelAlwaysShown="false"
        app:met_floatingLabelAnimating="true"
        app:met_floatingLabelPadding="8dp"
        app:met_floatingLabelText="@string/username"
        app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
        app:met_floatingLabelTextSize="14dp"
        app:met_helperText=""
        app:met_helperTextAlwaysShown="false"
        app:met_helperTextColor="@android:color/background_dark"

        android:hint="@string/username"
        app:met_iconPadding="8dp"
        app:met_primaryColor="@android:color/holo_blue_dark"
        app:met_singleLineEllipsis="true"
        app:met_underlineColor="@color/white" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="number"
        android:textColorHint="@android:color/holo_blue_dark"
        app:met_autoValidate="false"
        app:met_bottomTextSize="8dp"
        app:met_clearButton="true"
        android:hint="@string/pinview"
        app:met_errorColor="@android:color/holo_red_dark"
        app:met_floatingLabel="normal"
        app:met_floatingLabelAlwaysShown="false"
        app:met_floatingLabelAnimating="true"
        app:met_floatingLabelPadding="8dp"
        app:met_floatingLabelText="Enter Your 4 digit Pin"
        app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
        app:met_floatingLabelTextSize="14dp"
        app:met_helperText=""
        app:met_helperTextAlwaysShown="false"
        app:met_helperTextColor="@android:color/background_dark"
        app:met_iconPadding="8dp"
        app:met_primaryColor="@android:color/holo_blue_dark"
        app:met_singleLineEllipsis="true"
        app:met_underlineColor="@color/white" />

<Button
    android:layout_width="wrap_content"
android:background="@color/colorPrimaryDark"
    android:text="Submit"
    android:layout_margin="8dp"
    android:id="@+id/submit"
    android:layout_gravity="right"
    android:textColor="@android:color/white"
    android:layout_height="wrap_content"
    />
</LinearLayout>