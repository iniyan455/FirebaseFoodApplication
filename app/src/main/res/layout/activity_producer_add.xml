<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AddCrop">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:title="Add Product"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/cropname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:focusable="false"
                android:hint="@string/crop_name"
                android:inputType="text"
                android:textColorHint="@android:color/holo_blue_dark"
                app:met_autoValidate="false"
                app:met_bottomTextSize="8dp"
                app:met_clearButton="true"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="normal"
                app:met_floatingLabelAlwaysShown="false"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelPadding="8dp"
                app:met_floatingLabelText="@string/crop_name"
                app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
                app:met_floatingLabelTextSize="14dp"
                app:met_helperText=""
                app:met_helperTextAlwaysShown="false"
                app:met_helperTextColor="@android:color/background_dark"

                app:met_iconPadding="8dp"
                app:met_primaryColor="@android:color/holo_blue_dark"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="@color/white" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/marketprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:focusable="false"

                android:hint="@string/marketprice"
                android:inputType="number"
                android:textColorHint="@android:color/holo_blue_dark"
                app:met_autoValidate="false"
                app:met_bottomTextSize="8dp"
                app:met_clearButton="true"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="normal"
                app:met_floatingLabelAlwaysShown="false"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelPadding="8dp"
                app:met_floatingLabelText="@string/marketprice"
                app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
                app:met_floatingLabelTextSize="14dp"
                app:met_helperText=""
                app:met_helperTextAlwaysShown="false"
                app:met_helperTextColor="@android:color/background_dark"

                app:met_iconPadding="8dp"
                app:met_primaryColor="@android:color/holo_blue_dark"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="@color/white" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/scheduleprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:focusable="false"
                android:hint="@string/scheduleprice"

                android:inputType="text"
                android:textColorHint="@android:color/holo_blue_dark"
                app:met_autoValidate="false"
                app:met_bottomTextSize="8dp"
                app:met_clearButton="true"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="normal"
                app:met_floatingLabelAlwaysShown="false"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelPadding="8dp"
                app:met_floatingLabelText="@string/scheduleprice"
                app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
                app:met_floatingLabelTextSize="14dp"
                app:met_helperText=""
                app:met_helperTextAlwaysShown="false"
                app:met_helperTextColor="@android:color/background_dark"

                app:met_iconPadding="8dp"
                app:met_primaryColor="@android:color/holo_blue_dark"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="@color/white" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"

                android:hint="@string/quantity"
                android:inputType="number"

                android:textColorHint="@android:color/holo_blue_dark"
                app:met_autoValidate="false"
                app:met_bottomTextSize="8dp"
                app:met_clearButton="true"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="normal"
                app:met_floatingLabelAlwaysShown="false"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelPadding="8dp"
                app:met_floatingLabelText="@string/quantity"
                app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
                app:met_floatingLabelTextSize="14dp"
                app:met_helperText=""
                app:met_helperTextAlwaysShown="false"
                app:met_helperTextColor="@android:color/background_dark"
                app:met_iconPadding="8dp"
                app:met_primaryColor="@android:color/holo_blue_dark"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="@color/white" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/totalamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:focusable="false"
                android:hint="@string/totalamount"
                android:inputType="number"
                android:textColorHint="@android:color/holo_blue_dark"
                app:met_autoValidate="false"
                app:met_bottomTextSize="8dp"
                app:met_clearButton="true"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="normal"
                app:met_floatingLabelAlwaysShown="false"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelPadding="8dp"
                app:met_floatingLabelText="@string/totalamount"
                app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
                app:met_floatingLabelTextSize="14dp"
                app:met_helperText=""
                app:met_helperTextAlwaysShown="false"
                app:met_helperTextColor="@android:color/background_dark"

                app:met_iconPadding="8dp"
                app:met_primaryColor="@android:color/holo_blue_dark"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="@color/white" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"

                android:hint="@string/address"
                android:inputType="text"
                android:minLines="2"
                android:textColorHint="@android:color/holo_blue_dark"
                app:met_autoValidate="false"
                app:met_bottomTextSize="8dp"
                app:met_clearButton="true"
                app:met_errorColor="@android:color/holo_red_dark"
                app:met_floatingLabel="normal"
                app:met_floatingLabelAlwaysShown="false"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelPadding="8dp"
                app:met_floatingLabelText="@string/address"
                app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
                app:met_floatingLabelTextSize="14dp"
                app:met_helperText=""
                app:met_helperTextAlwaysShown="false"
                app:met_helperTextColor="@android:color/background_dark"
                app:met_iconPadding="8dp"
                app:met_primaryColor="@android:color/holo_blue_dark"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivery Option"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/deliveryoption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:thumbTint="@color/colorPrimaryDark" />


            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@color/colorPrimaryDark"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>